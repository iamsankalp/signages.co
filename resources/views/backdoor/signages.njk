	{% for signage in signages %}


		<div class="col-sm-4">

			<div class="card">
				  <img class="card-img-top" data-src="holder.js/100px180/" alt="100%x180" style="height: 180px; width: 100%; display: block;" src="{{signage.thumb_url}}" data-holder-rendered="true">
			  <div class="card-block">
			    <h4 class="card-title">
			    	{{signage.title | truncate(20)}}
			    </h4>
			    <p class="card-text">
			    	{{signage.description | truncate(60)}}
			    </p>
			  </div>
			  <ul class="list-group list-group-flush">
			    <li class="list-group-item">
			    	<p class="mb-0">
			    		<small><strong>Creator:</strong> {{signage.creator}}</small>	
			    	</p>
			    	<p class="mb-0">
			    		<small><strong>Language:</strong> {{signage.language}}</small>	
			    	</p>
			    </li>
			  </ul>
			  <div class="card-block clearfix">
			    <a href="{{ 'signage.showEdit' | route({id: signage.id}) }}" class="card-link ">
			    	<small>Edit</small>
			    </a>
			    <!-- <a href="" class="card-link text-danger js-delete-signage"> -->
			    <a href="#" data-delete-link="{{ 'signage.doDelete' | route({id: signage.id}) }}" class="card-link text-danger js-delete-signage">
			    	<small>Delete</small>
			    </a>
			  </div>
			</div>

		</div>

	{% endfor %}


<div class="modal fade" id="deleteSignageModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Confirm Delete</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this signage? This cannot be undone.</p>
      </div>
      <div class="modal-footer">

      <form method="POST" action="" id="deleteSignageForm">
      		{{ csrfField }}
        <button type="button" class="btn btn-secondary btn-outline" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>


        
        
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


