{% extends 'layouts.master' %}

{% block content %}


<div class="container mb-1">
  <div class="row">

    <div class="col-sm-6 push-sm-3 clearfix">
			<h2 class="mb-2 float-xs-left">Add New Signage</h2>
		</div>

  </div>
</div>

<div class="container mb-3">
  <div class="row">

    <div class="col-sm-6 push-sm-3">


<form>

  <div class="form-group">
    <label for="title">Title</label>
    <input type="email" name="title" class="form-control" id="title" placeholder="Enter email">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" name="description" id="description" rows="3" placeholder="Enter description"></textarea>
  </div>

  <div class="form-group">
    <label for="creator">Created By</label>
    <input type="email" name="creator" class="form-control" id="creator" placeholder="Enter email">
  </div>

  <div class="form-group">
    <label for="language">Language</label>
    <select class="form-control" id="language" name="language">
      <option>English</option>
      <option>Hindi</option>
      <option>Gujrati</option>
      <option>Marathi</option>
      <option>Bengali</option>
    </select>
  </div>

  <div class="form-group">
    <label for="thumbnail">Attach Thumbnail</label>
    <input type="file" class="form-control-file" id="thumbnail" id="thumbnail">
    <small class="form-text text-muted">Preferably JPG</small>
  </div>

  <div class="form-group">
    <label for="pdf">Attach PDF</label>
    <input type="file" class="form-control-file" name="pdf" id="pdf">
    <small class="form-text text-muted">A4 Size</small>
  </div>

  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>






		</div>

  </div>
</div>


{% endblock %}
